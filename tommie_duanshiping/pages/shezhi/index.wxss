/* pages/more/setting/setting.wxss */

page {
  background-color: #f4f4f4;
  font-size: 28rpx;
  color: #333;
  line-height: 1;
}

wx-button {
  position: relative;
  display: block;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  border-radius: 0;
  -webkit-tap-highlight-color: transparent;
  font-size: inherit;
  text-align: inherit;
  text-decoration: none;
  line-height: inherit;
  overflow: hidden;
  color: inherit;
  background-color: inherit;
}

wx-button::after {
  border: none;
}

.group {
  margin: 20rpx 0;
}

.item {
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  height: 104rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  background: #fff;
}

.one-px-b {
  border-bottom: 1px #f1f1f1 solid;
}

.right_icon {
  display: block;
  height: 114rpx;
  width: 40rpx;
  line-height: 114rpx;
  background: url(data:image/png;base64,) center center no-repeat;
  background-size: 15rpx 30rpx;
  text-align: right;
}

.item .icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.item .icon_right {
  width: 15rpx;
  height: 30rpx;
  padding-right: 15rpx;
  padding-left: 20rpx;
}

.item .content {
  -webkit-flex: 1;
  flex: 1;
}

.item .count {
  color: #888;
  position: relative;
}

.item .reddot {
  width: 10rpx;
  height: 10rpx;
  background-color: #f34848;
  border-radius: 50%;
  margin: 0 4rpx;
}

.item .count .y-btn {
  width: 128rpx;
  height: 56rpx;
  text-align: center;
  color: #333;
  border: 2rpx solid #ffc200 inset;
  border-radius: 10rpx;
  background-color: #ffda44;
  font-size: 28rpx;
  line-height: 56rpx;
}

.item .contact {
  padding: 0;
  text-align: left;
  background-color: transparent;
  font-size: 32rpx;
}

.item .contact::after {
  border: none;
}

.item-extend-desc {
  padding: 0 20rpx 20rpx;
  color: #888;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.mask .mask-cover {
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.1);
}

.mask .mask-content {
  position: absolute;
  top: 22rpx;
  right: 145rpx;
  height: 90rpx;
  width: 480rpx;
  color: #fff;
  background-color: #333;
  text-align: center;
  line-height: 90rpx;
  box-sizing: border-box;
}

.mask .mask-content::before {
  content: '';
  position: absolute;
  top: -10rpx;
  right: 20rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 12rpx solid #333;
}
